<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.examhelper">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.QUICKBOOT_POWERON" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_3"
        android:supportsRtl="true"
        android:theme="@style/NewTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseSubjectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseIntentionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DataBaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AnsweringActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Show_DB_Activity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".TimeActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Test_CreatingActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Test_AnsweringActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".New_Test_CreatingActivity"
            android:screenOrientation="portrait"></activity>

        <receiver
            android:name=".TimeNotification"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.REBOOT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>